
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Check if user is the hardcoded master admin
    function isMasterAdmin() {
      return request.auth != null && 
             request.auth.token.keys().hasAny(['email']) && 
             request.auth.token.email == "idris.elfeghi@byanai.com";
    }

    // Check if user has admin role in database
    function isPromotedAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USER PROFILES
    match /users/{userId} {
      // Explicitly allow all operations for owner to prevent 'permission-denied' on first create
      allow create, update, delete, get, list: if isOwner(userId);
      // Allow admins to access any profile
      allow read, write: if isMasterAdmin() || isPromotedAdmin();
    }

    // USER DATA (Portfolio, Watchlist)
    match /user_data/{userId} {
      allow create, update, delete, get, list: if isOwner(userId);
      allow read, write: if isMasterAdmin() || isPromotedAdmin();
    }

    // DEFAULT FALLBACK
    match /{document=**} {
      allow read, write: if isMasterAdmin();
    }
  }
}
