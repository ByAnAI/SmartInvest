
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Check if user is the hardcoded master admin
    function isMasterAdmin() {
      return request.auth != null && 
             request.auth.token.keys().hasAny(['email']) && 
             request.auth.token.email == "idris.elfeghi@byanai.com";
    }

    // Check if user has admin role in database
    function isPromotedAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USER PROFILES & NESTED COLLECTIONS
    match /users/{userId} {
      allow create, update, delete, get, list: if isOwner(userId);
      allow read, write: if isMasterAdmin() || isPromotedAdmin();
      
      // Nested collections (My Files, My Notes, Team Members)
      match /folders/{document=**} {
        allow read, write: if isOwner(userId);
      }
      match /files/{document=**} {
        allow read, write: if isOwner(userId);
      }
      match /notes/{document=**} {
        allow read, write: if isOwner(userId);
      }
      match /teamMembers/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // USER DATA (Portfolio, Watchlist - Legacy)
    match /user_data/{userId} {
      allow create, update, delete, get, list: if isOwner(userId);
      allow read, write: if isMasterAdmin() || isPromotedAdmin();
    }

    // DEFAULT FALLBACK
    match /{document=**} {
      allow read, write: if isMasterAdmin();
    }
  }
}
